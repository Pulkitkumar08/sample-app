pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Pulkitkumar08/sample-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat 'docker build -t sample-app:latest .'
                }
            }
        }

        stage('Scan Docker Image with Trivy') {
            steps {
                script {
                    bat 'trivy image sample-app:latest'
                }
            }
        }
    }
}
